! ==================== !
!! # The Inari Sámi dates
! ==================== !

!! This is a file generating Inari Sámi date expressions.

! 12.8.
! Porgemáánu kyehtnubálovváád peeivi
! Borgemánu guoktenuppelot beaivi

Multichar_Symbols

+Use/NG

@U.MONTH.1@
@U.MONTH.2@
@U.MONTH.3@
@U.MONTH.4@
@U.MONTH.5@
@U.MONTH.6@
@U.MONTH.7@
@U.MONTH.8@
@U.MONTH.9@
@U.MONTH.10@
@U.MONTH.11@
@U.MONTH.12@

LEXICON Root

  @U.MONTH.1@:uđđâivemáánu% @U.MONTH.1@  31DAYS ;
  @U.MONTH.2@:kuovâmáánu% @U.MONTH.2@    29DAYS ;
  @U.MONTH.3@:njuhčâmáánu% @U.MONTH.3@   31DAYS ;
  @U.MONTH.4@:cuáŋuimáánu% @U.MONTH.4@   30DAYS ;
  @U.MONTH.5@:vyesimáánu% @U.MONTH.5@    31DAYS ;
  @U.MONTH.6@:kesimáánu% @U.MONTH.6@     30DAYS ;
  @U.MONTH.7@:syeinimáánu% @U.MONTH.7@   31DAYS ;
  @U.MONTH.8@:porgemáánu% @U.MONTH.8@    31DAYS ;
  @U.MONTH.9@:čohčâmáánu% @U.MONTH.9@    30DAYS ;
 @U.MONTH.10@:roovvâdmáánu% @U.MONTH.10@ 31DAYS ;
 @U.MONTH.11@:skammâmáánu% @U.MONTH.11@  30DAYS ;
 @U.MONTH.12@:juovlâmáánu% @U.MONTH.12@  31DAYS ;

LEXICON 31DAYS
 31:kulmâlovváádvuossâmuš B      ;
                          30DAYS ;

LEXICON 30DAYS
 3%0:kulmâlovváád B      ;
                  29DAYS ;

LEXICON 29DAYS
   1:vuossâmuš                 B ;
   2:nubbe                     B ;
   3:kuálmád                   B ;
   4:niäljád                   B ;
   5:viiđât                    B ;
   6:kuuđâd                    B ;
   7:čiččâd                    B ;
   8:káávcád                   B ;
   9:oovcád                    B ;
 %01:vuossâmuš                 B ;
 %02:nubbe                     B ;
 %03:kuálmád                   B ;
 %04:niäljád                   B ;
 %05:viiđâd                    B ;
 %06:kuuđâd                    B ;
 %07:čiččâd                    B ;
 %08:káávcád                   B ;
 %09:oovcád                    B ;
 1%0:lovváád                   B ;
  11:oktnubálovvááđ            B ;
  12:kyehtnubálovvááđ          B ;
  13:kulmânubálovvááđ          B ;
  14:neljinubálovvááđ          B ;
  15:vittnubálovvááđ           B ;
  16:kuttnubálovvááđ           B ;
  17:čiččâmnubálovvááđ         B ;
  18:käävcinubálovvááđ         B ;
  19:oovcenubálovvááđ          B ;
 2%0:kyehtnubálovváád          B ;
  21:kyehtnubálovváádvuossâmuš B ;
  22:kyehtnubálovváádnubbe     B ;
  23:kyehtnubálovváádkuálmád   B ;
  24:kyehtnubálovváádniäljád   B ;
  25:kyehtnubálovváádviiđâd    B ;
  26:kyehtnubálovváádkuuđâd    B ;
  27:kyehtnubálovváádčiččâd    B ;
  28:kyehtnubálovváádkáávcád   B ;
  29:kyehtnubálovváádoovcád    B ;

LEXICON B
 %.:% peivi MONTH ;

LEXICON MONTH
    1@U.MONTH.1@:@U.MONTH.1@     X ;
    2@U.MONTH.2@:@U.MONTH.2@     X ;
    3@U.MONTH.3@:@U.MONTH.3@     X ;
    4@U.MONTH.4@:@U.MONTH.4@     X ;
    5@U.MONTH.5@:@U.MONTH.5@     X ;
    6@U.MONTH.6@:@U.MONTH.6@     X ;
    7@U.MONTH.7@:@U.MONTH.7@     X ;
    8@U.MONTH.8@:@U.MONTH.8@     X ;
    9@U.MONTH.9@:@U.MONTH.9@     X ;
  %01@U.MONTH.1@:@U.MONTH.1@     X ;
  %02@U.MONTH.2@:@U.MONTH.2@     X ;
  %03@U.MONTH.3@:@U.MONTH.3@     X ;
  %04@U.MONTH.4@:@U.MONTH.4@     X ;
  %05@U.MONTH.5@:@U.MONTH.5@     X ;
  %06@U.MONTH.6@:@U.MONTH.6@     X ;
  %07@U.MONTH.7@:@U.MONTH.7@     X ;
  %08@U.MONTH.8@:@U.MONTH.8@     X ;
  %09@U.MONTH.9@:@U.MONTH.9@     X ;
 1%0@U.MONTH.10@:1%0@U.MONTH.10@ X ;
  11@U.MONTH.11@:11@U.MONTH.11@  X ;
  12@U.MONTH.12@:12@U.MONTH.12@  X ;

!LEXICON X
! %.: # ;

! END

LEXICON X
       %.: ENDLEX ;
  +Use/NG: ENDLEX ; !input uten punktum
      %.:%   DATEYEAR ; ! sti til årstall


LEXICON DATEYEAR
 1+Use/NG:         THOUSANDS      ; ! 1000 -> alternativ måte, duhátovccičuođi...
 2:guokte   THOUSANDS      ; ! 2000 ->
 3:golbma   THOUSANDS      ; ! etc.->
 4:njeallje THOUSANDS      ;
 5:vihtta   THOUSANDS      ;
 6:guhtta   THOUSANDS      ;
 7:čieža    THOUSANDS      ;
 8:gávcci   THOUSANDS      ;
 9:ovcci    THOUSANDS      ;
            YEARTEENS      ; ! 1000 - 1999
            YEARHUNDREDS   ; ! 100-999
            TENS           ;
            ONES           ;

LEXICON THOUSANDS      ! x > 1
 :duhát  THOUSAND ;

LEXICON THOUSAND
         UNDERTHOUSAND ; ! 1100-1999
     %0: TENS          ; ! 1020-1099
     %0: TEENS         ; ! 1010-1019
   %0%0: ONES          ; ! 1001-1009

!===========================
!Here starts the 999 numbers
!===========================

LEXICON UNDERTHOUSAND
          HUNDREDS ;
 1:čuođi  HUNDRED  ;

LEXICON HUNDREDS
 2:guokte   CUODI ;
 3:golbma   CUODI ;
 4:njeallje CUODI ;
 5:vihtta   CUODI ;
 6:guhtta   CUODI ;
 7:čieža    CUODI ;
 8:gávcci   CUODI ;
 9:ovcci    CUODI ;

LEXICON CUODI
  :čuođi  HUNDRED ;

LEXICON HUNDRED
       TENS  ;
       TEENS ;
   %0: ONES  ;

LEXICON TEENS
 1: TEEN ;

LEXICON TEEN
 1:okta        LOHKAI ;
 1:akta+Use/NG LOHKAI ;
 2:guokte      LOHKAI ;
 3:golbma      LOHKAI ;
 4:njeallje    LOHKAI ;
 5:vihtta      LOHKAI ;
 6:guhtta      LOHKAI ;
 7:čieža       LOHKAI ;
 8:gávcci      LOHKAI ;
 9:ovcci       LOHKAI ;

LEXICON TENS
   1%0:logi     ENDLEX    ;
     2:guokte   LOGI     ;
     3:golbma   LOGI     ;
     4:njeallje LOGI     ;
     5:vihtta   LOGI     ;
     6:guhtta   LOGI     ;
     7:čieža    LOGI     ;
     8:gávcci   LOGI     ;
     9:ovcci    LOGI     ;


LEXICON LOGI
       :logi  ONES        ;

LEXICON ONES
 1:okta        ENDLEX ;
 1:akta+Use/NG ENDLEX ;
 2:guokte      ENDLEX ;
 3:golbma      ENDLEX ;
 4:njeallje    ENDLEX ;
 5:vihtta      ENDLEX ;
 6:guhtta      ENDLEX ;
 7:čieža       ENDLEX ;
 8:gávcci      ENDLEX ;
 9:ovcci       ENDLEX ;
 %0:       ENDLEX ;

LEXICON LOHKAI
 :nuppelohkái  ENDLEX ;

LEXICON YEARTEENS
 1: YEARTEEN ;

LEXICON YEARTEEN
 1:okta        YEARLOGAI ;
 1:akta+Use/NG YEARLOGAI ;
 2:guokte      YEARLOGAI ;
 3:golbma      YEARLOGAI ;
 4:njeallje    YEARLOGAI ;
 5:vihtta      YEARLOGAI ;
 6:guhtta      YEARLOGAI ;
 7:čieža       YEARLOGAI ;
 8:gávcci      YEARLOGAI ;
 9:ovcci       YEARLOGAI ;

LEXICON YEARLOGAI
 :nuppelot  YEARHUNDRED ;

LEXICON YEARHUNDREDS
 1:            YEARHUNDRED ;
 2:guokte      YEARHUNDRED ;
 3:golbma      YEARHUNDRED ;
 4:njeallje    YEARHUNDRED ;
 5:vihtta      YEARHUNDRED ;
 6:guhtta      YEARHUNDRED ;
 7:čieža       YEARHUNDRED ;
 8:gávcci      YEARHUNDRED ;
 9:ovcci       YEARHUNDRED ;

LEXICON YEARHUNDRED
   %0:čuođi  ONES    ;
     :čuođi  TENS    ;
     :čuođi  TEENS    ;
 %0%0:čuođi  ENDLEX ;

LEXICON ENDLEX
  # ;
