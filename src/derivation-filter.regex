# This filter removes all strings containing derivational tags
# as defined below. See smj-lex.txt for further documentation.
#
# It should be applied on top of the nonrec transducer.

read regex 
~[ $[ %+Der1 ?* %+Der1 ]
 | $[ %+Der2 ?* %+Der1 ]
 | $[ %+Der2 ?* %+Der2 ]
 | $[ %+Der3 ?* %+Der1 ]
 | $[ %+Der3 ?* %+Der2 ]
 | $[ %+Der3 ?* %+Der3 ]
 | $[ %+Der4 ?* %+Der1 ]
 | $[ %+Der4 ?* %+Der2 ]
 | $[ %+Der4 ?* %+Der3 ]
 | $[ %+Der4 ?* %+Der4 ]
 ] ;
