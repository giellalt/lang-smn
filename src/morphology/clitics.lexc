! Clitics

! %># for clitics to differ them from # in compounds.

LEXICON G  !!= * __@CODE@__ for ijgo, jiemge, but not *kielâgo
+Foc/ge:%>#g6e  ENDLEX ;
+Foc/go:%>#g6o   ENDLEX ;
KG ; 

LEXICON K !!= *  __@CODE@__ for kielâgin, but not *ijgo, *jiemge
+Foc/gin:%>#g6in  ENDLEX ;
KG ;

LEXICON KG !!= * __@CODE@__ all clitics except go, ge ... and except gin
:%> ENDLEX ; ! clitic-less forms ! %>  because .#. doesn't function as it should in twolc-rules
+Qst+Use/NG:%>#uv KG2 ;
+Qst:%>#%-uv KG2 ;
+Foc/uv:%>#%-uv KG2 ;
+Foc/ba:%>#b6a   ENDLEX ;
+Foc/baa:%>#b6á  ENDLEX ;
+Foc/baan:%>#b6án  ENDLEX ;
+Foc/ban:%>#b6an  ENDLEX ;
+Foc/gas:%>#g6âs  ENDLEX ;
+Foc/ges:%>#g6es  ENDLEX ;
+Foc/gis:%>#g6is  ENDLEX ;
+Foc/han:%>#hân  ENDLEX ;
+Foc/nii:%>#nii  ENDLEX ;
+Foc/sun:%>#sun  ENDLEX ;

LEXICON KG2
ENDLEX ;
+Foc/sun:%>#sun  ENDLEX ; ! for lii-uvsun (and others?)



